# ===========================================
# SWARM Marketplace Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# Blockchain Configuration
# ===========================================

# Alchemy RPC URL for Ethereum Sepolia testnet
# Get your API key at https://dashboard.alchemy.com/
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_api_key_here

# WalletConnect Project ID (required for RainbowKit)
# Get your project ID at https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# MNEE Token Contract Address on Sepolia
NEXT_PUBLIC_MNEE_CONTRACT_ADDRESS=0x8ccedbAe4916b79da7F3F612EfB2EB93A2bFD6cF

# ===========================================
# Smart Contract Addresses (deployed)
# ===========================================
# These will be populated after contract deployment

NEXT_PUBLIC_SWARM_REGISTRY_ADDRESS=
NEXT_PUBLIC_JOB_ESCROW_ADDRESS=
NEXT_PUBLIC_AGENT_PAYMENTS_ADDRESS=

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL connection string (Neon serverless)
# Get your database at https://neon.tech/
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# ===========================================
# Real-time Updates (Pusher)
# ===========================================

# Pusher configuration for real-time events
# Get your keys at https://dashboard.pusher.com/
# 
# Channel naming conventions:
# - job-{jobId}: Job-specific events (progress, completion)
# - swarm-{swarmId}: Swarm-specific events (payments, agent activity)
# - marketplace: Global marketplace events (new jobs, new swarms)
# - user-{address}: User-specific notifications
#
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key_here
NEXT_PUBLIC_PUSHER_CLUSTER=us2
PUSHER_APP_ID=your_pusher_app_id_here
PUSHER_SECRET=your_pusher_secret_here

# ===========================================
# Job Queue (Redis/Upstash)
# ===========================================

# Redis connection for BullMQ job queue
# Get your Redis at https://upstash.com/ or https://railway.app/
REDIS_URL=redis://default:password@host.upstash.io:6379

# ===========================================
# CrewAI Agent Service
# ===========================================

# URL of the Python CrewAI service
CREWAI_SERVICE_URL=http://localhost:8000

# Groq API key for LLM inference (Llama 3.1-70b)
# Get your key at https://console.groq.com/
GROQ_API_KEY=gsk_your_groq_api_key_here

# ===========================================
# Environment
# ===========================================

NODE_ENV=development
